{
  "name": "@uncaged-studios/evm-contracts-library",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "pretest": "npm run abi:prod:generate && npm run abi:test:generate",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "forge test -vvv",
    "test:e2e": "jest --runInBand",
    "abi:prod:generate": "forge inspect src/ka-ching/CashRegisterV1.sol:KaChingCashRegisterV1 abi > KaChingCashRegisterV1.abi.json && typechain --target=ethers-v6 --out-dir=src/ka-ching/sdk/abi 'KaChingCashRegisterV1.abi.json'",
    "abi:test:generate": "forge inspect test/CashRegisterV1/contracts/MockMBS.sol:MockMBS abi > MockMBS.abi.json && typechain --target=ethers-v6 --out-dir=e2e/ka-ching/abi/mbs 'MockMBS.abi.json'"
  },
  "license": "MIT",
  "devDependencies": {
    "@typechain/ethers-v6": "^0.3.3",
    "@types/fs-extra": "^11.0.1",
    "@types/uuid": "^9.0.1",
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typechain": "^8.2.0",
    "uuid": "^9.0.0"
  },
  "dependencies": {
    "ethers": "^6.4.0"
  }
}
