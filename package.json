{
  "name": "@uncaged-studios/evm-contracts-library",
  "version": "0.2.0-beta.0",
  "description": "Ka-Ching TypeScript SDK - A decentralized point-of-sale system",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js"
    }
  },
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts --fix",
    "build": "npm-run-all build:**",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "pretest": "npm-run-all abi:generate:** build",
    "test": "npm-run-all test:*",
    "test:unit": "forge test -vvv",
    "test:e2e": "jest",
    "abi:generate:prod:KaChingCashRegisterV1": "./script/abi-generate.sh prod KaChingCashRegisterV1",
    "abi:generate:test:MockMBS": "./script/abi-generate.sh test MockMBS",
    "release": "release-it",
    "anvil": "ts-node -e \"require('./e2e/global-setup').default()\""
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^11.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/ms": "^0.7.31",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "dotenv": "^16.0.3",
    "eslint": "^8.42.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^15.10.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0"
  },
  "dependencies": {
    "ethers": "^5.7.2",
    "ms": "^2.1.3"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UnCaged-Studios/solana-program-library.git"
  },
  "bugs": {
    "url": "https://github.com/UnCaged-Studios/solana-program-library/issues"
  },
  "homepage": "https://github.com/UnCaged-Studios/solana-program-library#readme",
  "author": "perestom@gmail.com",
  "license": "MIT"
}
